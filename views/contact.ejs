<%- include('./partials/header.ejs')%>
    <title>About Us</title>
    <link type="text/css" rel="stylesheet" href="/css/login.css">
    <%- include('./partials/header-end.ejs')%>
        <div id="preloader"></div>
        <div class="content">
            <section class="contact-section py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <h2 class="text-center mb-4">Contact Us</h2>
                            <p class="text-center mb-5">Have a question, comment, or suggestion? We'd love to hear from
                                you! You can contact us using the form below or through the following methods:</p>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h4 class="card-title">Phone</h4>
                                            <p class="card-text">Call us at <a href="tel:123-456-7890">123-456-7890</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h4 class="card-title">Email</h4>
                                            <p class="card-text">Send us an email at <a
                                                    href="mailto:info@groupname.com">info@groupname.com</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="5"
                                        required></textarea>
                                </div>
                                <div class="text-center mt-3 mb-5">
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <%- include('./partials/footer.ejs')%>