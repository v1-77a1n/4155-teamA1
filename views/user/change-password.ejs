<%- include('../partials/header.ejs')%>
    <title>Password change</title>
    <link type="text/css" rel="stylesheet" href="/css/stylesheet.css">
    <%- include('../partials/header-end.ejs')%>
        <div id="preloader"></div>
        <div class="content">
            <form action='/users/change-password' method='POST'>
                <table>
                    <tr>
                        <td><label for="password">Current Password</label></td>
                        <td><input type="password" id="password" name="password" class="fixed-width" minlength="8"
                                maxlength="64" required></td>
                    </tr>
                    <tr>
                        <td><label for="newPassword">New Password</label></td>
                        <td><input type="password" id="newPassword" name="newPassword" class="fixed-width" minlength="8"
                                maxlength="64" required></td>
                    </tr>

                    <tr>
                        <td><label for="confirmPassword">Confirm Password</label></td>
                        <td><input type="password" id="confirmPassword" name="confirmPassword" class="fixed-width"
                                minlength="8" maxlength="64" required></td>
                    </tr>

                    <tr>
                        <td colspan="2" class="align-right"><button>Submit changes</button></td>
                    </tr>
                </table>
            </form>
        </div>
        <%- include('../partials/footer.ejs')%>