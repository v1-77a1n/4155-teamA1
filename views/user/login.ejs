<%- include('../partials/header.ejs')%>
    <main>
        <div class="container" id="login-form-container">
            <div class="row justify-content-center mt-5 pt-4 ms-5 ps-5">
                <h1>Login</h1>
                <form>
                    <div class="g-signin2"></div>
                    <div class="form-group row ms-5 ps-5">
                        <label for="username" class="col-sm-2 col-form-label">Username: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="username" placeholder="Username" required>
                        </div>
                    </div>
                    <div class="form-group row ms-5 mt-4 ps-5">
                        <label for="password" class="col-sm-2 col-form-label">Password: </label>
                        <div class="col-sm-6">
                            <input type="password" class="form-control" id="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="form-group row ms-5 mt-4 ps-5">
                        <div class="col-sm-6 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </div>
                </form>
                <div class="row mt-4 ms-5 ps-5">
                    <div clas="col-sm-6">
                        <a href="#">Forgot password?</a>
                    </div>
                    <div class="col-sm-6">
                        <a href="new">Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs')%>