    <link type="text/css" rel="stylesheet" href="/css/stylesheet.css">
    <%- include('../partials/header-end.ejs')%>
        <div class="content">
            <form action='/users/req-pass-change' method='POST'>
                <table>
                    <tr>
                        <td><label for="password">Email</label></td>
