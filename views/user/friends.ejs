<%- include('../partials/header.ejs')%>
    <title>Friends</title>
    <link type="text/css" rel="stylesheet" href="/css/login.css">
    <%- include('../partials/header-end.ejs')%>
        <div id="preloader"></div>
        <div class="content">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <h3>My Friends</h3>
                        <div id="friends-list">
                            <ul>
                                <% friendArr.forEach((friend)=> {%>
                                    <li class="mt-3">
                                        <%= friend.firstName %>
                                            <%= friend.lastName %> (<%=friend.email%>) <a
                                                        href="/users/send_message?friend=<%=friend.email%>"><input
                                                            type="button" id="sendMessage" class="ms-2"
                                                            value="Send Message"></a>
                                                    <a href="/users/delete_friend/<%= friend._id %>"><button
                                                            type="button" class="btn btn-danger">Delete</button></a>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3>Add a Friend</h3>
                        <form id="add-friend-form" action="/users/friends" method="POST">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="text" class="form-control" id="email" name="email" required>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Add Friend</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer.ejs')%>