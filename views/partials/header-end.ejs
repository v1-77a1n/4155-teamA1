<body>
    <header id="header" class="custom-bg container-fluid">
        <div class="row">
            <div class="col-*-auto">
                <nav class="d-flex justify-content-between mx-5" id="nav1">
                    <a href="/"><img src="/images/logo.png" alt="logo" class="img-fluid" id="logo-image" width="115px"
                           height="90px"></a>
                           <div id ="WorldClock" class="clock"> </div> 
                             <ul class="list-inline my-auto" id="nav1-options">
                                <li class="list-inline-item me-4"><a href="/">Home</a></li>
                                <%if(!user) {%>
                                 <li class="list-inline-item me-4"><a href="/users/login">Login</a></li>
                                    <li class="list-inline-item me-4"><a href="/users/new">Sign up</a></li>
                                    <%} else {%>
                                    <li class="list-inline-item me-4"><a href="/users/profile">Profile</a></li>
                                    <li class="list-inline-item me-4"><a href="/users/friends">Friends</a></li>
                                    <li class="list-inline-item me-4"><a href="/users/messages">Messages</a></li>
                                    <li class="list-inline-item me-4"><a href="/settings">Settings</a></li>
                                    <li class="list-inline-item me-4"><a href="/users/logout">Logout</a></li>"
                                <%}%>
                            </ul>
                </nav>
                <hr class="mx-auto d-block" id="nav-line">
            </div>
        </div>
    </header>
    <section id="errorHeader">
        <% if(errorMessages.length> 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='error'>
                    <%=message%>
                </div>
                <%});%>
                    <%}%>

                        <% if(successMessages.length> 0) {%>

                            <% successMessages.forEach(message=>{%>
                                <div class='success'>
                                    <%=message%>
                                </div>
                                <%});%>
                                    <%}%>
    </section>
